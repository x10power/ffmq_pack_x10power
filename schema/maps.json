{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "maps.json",
  "type": "array",
  "title": "EmoTracker: Maps Container",
  "description": "The root schema comprises the entire JSON document.",
  "default": [],
  "required": [
    "name",
    "img"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Map Name",
      "description": "",
      "default": ""
    },
    "img": {
      "type": "string",
      "title": "Map image path",
      "description": "",
      "default": ""
    },
    "location_size": {
      "type": "integer",
      "title": "Size of location squares",
      "description": "Width in pixels",
      "examples": [
        16
      ]
    },
    "location_border_thickness": {
      "type": "integer",
      "title": "Size of border on location squares",
      "description": "Width in pixels",
      "examples": [
        1
      ]
    }
  }
}
